@using EntityLayer.Concrete
@model List<Experience>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}




<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Deneyimler Tablosu</h4>
     

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Ad</th>
                            <th>Açıklama</th>
                            <th>Tarih</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {
                            <tr>
                                <td>@x.ExprienceID</td>
                                <td>@x.Name</td>
                                <td>@x.Descrition</td>
                                <td>@x.Date</td>
                                <td><a href="/Experience/DeleteExperience/@x.ExprienceID" class="btn btn-danger">Sil</a></td>
                                <td><a href="/Experience/EditExperience/@x.ExprienceID" class="btn btn-success">Güncelle</a> </td>
                             
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
                <a href="/Experience/AddExperience/" class="btn btn-outline-info">Yeni Deneyim Ekle</a>

        </div>
    </div>
</div>
