@using EntityLayer.Concrete
@model List<Portfolio>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
<br />

<h1>Portfolio</h1>
<br />
<div class="row">
    <div class="col">
        <div class="card bg-default shadow">
            <div class="card-header bg-transparent border-0">
                <h3 class="text-white mb-0">Projelerim</h3>
            </div>
            <div class="table-responsive">
                <table class="table align-items-center table-dark table-flush">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col" class="sort" data-sort="name">Platform</th>
                            <th scope="col" class="sort" data-sort="budget">Ücret</th>
                            <th scope="col" class="sort" data-sort="status">Durum</th>                         
                            <th scope="col" class="sort" data-sort="completion">Completion</th>
                                                       

                            <th scope="col">Sil</th>
                            <th scope="col">Güncelle</th>
                        </tr>
                    </thead>
                    <tbody class="list">
                        @foreach (var x in Model)
                        {
                            <tr>
                                <th scope="row">
                                    <div class="media align-items-center">
                                        <a href="#" class="avatar rounded-circle mr-3">
                                            <img alt="Image placeholder" src="@x.Platform">
                                        </a>
                                        <div class="media-body">
                                            <span class="name mb-0 text-sm">@x.Name</span>
                                        </div>
                                    </div>
                                </th>
                                <td class="budget">
                                    $@x.Price USD
                                </td>
                                <td>
                                    <span class="badge badge-dot mr-4">
                                        <i class="bg-succes"></i>
                                        @if (x.Status == true)
                                        {
                                            <span class="status">Tamamlandı</span>
                                        }

                                        @if (x.Status == false)
                                        {
                                            <span class="status">Devam Ediyor</span>
                                        }
                                    </span>
                                </td>
                                @* <td>
                                    <div class="avatar-group">
                                    <a href="#" class="avatar avatar-sm rounded-circle" data-toggle="tooltip" data-original-title="Ryan Tompson">
                                    <img alt="Image placeholder" src="~/adminthema/assets/img/theme/team-1.jpg">
                                    </a>
                                    <a href="#" class="avatar avatar-sm rounded-circle" data-toggle="tooltip" data-original-title="Romina Hadid">
                                    <img alt="Image placeholder" src="~/adminthema/assets/img/theme/team-2.jpg">
                                    </a>
                                    <a href="#" class="avatar avatar-sm rounded-circle" data-toggle="tooltip" data-original-title="Alexander Smith">
                                    <img alt="Image placeholder" src="~/adminthema/assets/img/theme/team-3.jpg">
                                    </a>
                                    <a href="#" class="avatar avatar-sm rounded-circle" data-toggle="tooltip" data-original-title="Jessica Doe">
                                    <img alt="Image placeholder" src="~/adminthema/assets/img/theme/team-4.jpg">
                                    </a>
                                    </div>
                                    </td>*@
                                <td>
                                    <div class="d-flex align-items-center">
                                        <span class="completion mr-2">@x.Value%</span>
                                        <div>
                                            <div class="progress">
                                                <div class="progress-bar bg-warning" role="progressbar" aria-valuenow="@x.Value" aria-valuemin="0" aria-valuemax="100" style="width: @x.Value%;"></div>
                                            </div>
                                        </div>
                                    </div>
                                </td>

                                 <td class="budget">
                                    <a class="btn btn-outline-danger" href="DeletePortfolio/@x.PortfolioID">Sil</a>
                                </td>

                                  <td class="budget">
                                    <a class="btn btn-outline-success" href="EditPortfolio/@x.PortfolioID">Güncelle</a>
                                </td>
                            </tr>



                        }
                    </tbody>
                </table>
            </div>


            <br />

            <a href="/Portfolio/AddPortfolio/" class="btn btn-primary">Yeni Proje Ekle</a>
            <br />
            <br />

            <br />
        </div>
    </div>
</div>

