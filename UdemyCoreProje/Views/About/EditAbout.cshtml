@model EntityLayer.Concrete.About
@{
    ViewData["Title"] = "EditAbout";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}



 <div class="col-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Deneyim Ekle</h4>
                  


@using(Html.BeginForm("EditAbout","About",FormMethod.Post))
{

    @Html.HiddenFor(x=>x.AboutID);
    <div>
        <label> Başlık</label>
        @Html.TextBoxFor(x=>x.Title, new {@class="form-control"})
        <br>
    </div>

     <div>
        <label> Açıklama</label>
        @Html.TextBoxFor(x=>x.Description, new {@class="form-control"})
        <br>
    </div>

     <div>
        <label> Adres</label>
        @Html.TextBoxFor(x=>x.Address, new {@class="form-control"})
        <br>
    </div>

     <div>
        <label> Yaş</label>
        @Html.TextBoxFor(x=>x.Age, new {@class="form-control"})
        <br>
    </div>

    <div>
        <label> Url</label>
        @Html.TextBoxFor(x=>x.ImageUrl, new {@class="form-control"})
        <br>
    </div>

     <div>
        <label> Mail</label>
        @Html.TextBoxFor(x=>x.Mail, new {@class="form-control"})
        <br>
    </div>
     <div>
        <label> Telefon</label>
        @Html.TextBoxFor(x=>x.Phone, new {@class="form-control"})
        <br>
    </div>


    <button class="btn btn-success">Güncelle</button>
}

    </div>
    </div>
    </div>
