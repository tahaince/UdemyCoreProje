@using EntityLayer.Concrete
@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Deneyimler Tablosu</h4>
     

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Ad</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {
                            <tr>
                                <th scope="row">
                                    <div class="media align-items-center">
                                        <a href="#" class="avatar rounded-circle mr-3">
                                            <img alt="Image placeholder" src="@x.ImageUrl">
                                        </a>
                                        <div class="media-body">
                                            <span class="name mb-0 text-sm">@x.Title</span>
                                        </div>
                                    </div>
                                </th>



                                <td class="budget">
                                    <a class="btn btn-outline-danger" href="/Service/DeleteService/@x.ServiceID">Sil</a>
                                </td>

                                <td class="budget">
                                    <a class="btn btn-outline-success" href="/Service/EditService/@x.ServiceID">Güncelle</a>
                                </td>
                            </tr>



                        }
                    </tbody>
                </table>
            </div>


            <br />

            <a href="/Service/AddService/" class="btn btn-primary">Yeni Alan Ekle</a>
            <br />
            <br />

            <br />
        </div>
    </div>
</div>


